@import "nib";

unselectable() {
    cursor: default;
    user-select: none;
}

position-sticky() {
    position: -webkit-sticky;
    position: -moz-sticky;
    position: -o-sticky;
    position: -ms-sticky;
    position: sticky;
}

tap-highlight($color = currentColor) {
    position: relative;
    cursor: pointer;

    &::after {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: $color;
        opacity: 0;
        transition: opacity 0.3s;
        pointer-events: none;
    }

    &:active::after {
        opacity: 0.3;
        transition: opacity 0.1s;
    }
}
