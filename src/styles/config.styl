@import "nib";

$font-size-default = 18px;
$font-weight-thin = 100;
$font-weight-light = 300;
$font-weight-regular = 400;
$font-weight-bold = 700;

$text-color = #333;
$text-color-light = #ffffff;
$text-color-faint = #C5C5C5;

$color-grey = #f5f5f5;
$color-blue = #59c6ff;
$color-green = #9eed6d;
// $color-yellow = #feeb75;
$color-yellow = rgb(255, 232, 92);
$color-red = #ff8283;

$color-primary = $color-blue;
$color-negative = red;

$placeholder-color = $text-color-faint;
$placeholder-color-light = rgba(255, 255, 255, 0.6);

$border-color = rgba(0, 0, 0, 0.2);
$border-color-light = rgba(255, 255, 255, 0.5);

$row-height = 50px;

$cat-color-1 = $color-green;
$cat-color-2 = $color-yellow;
$cat-color-3 = $color-red;

$scrim-opacity = 0.5;

:host, button, input {
    font-weight: $font-weight-regular;
    font-size: $font-size-default;
    color: $text-color;
    -webkit-font-smoothing: antialiased;
}

a {
    text-decoration: none;
    color: inherit;
}

button, a.button {
    display: inline-block;
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    border: none;
    background: #fff;
    margin: 0;
    height: $row-height;
    line-height: $row-height;
    padding: 0 15px;
    cursor: pointer;
    color: $color-primary;
    text-align: center;
}

button.primary {
    background: $color-primary;
    color: $text-color-light;
}

button.negative {
    background: $color-negative;
    color: $text-color-light;
}

button.ghost {
    background: transparent;
    color: #fff;
    font-weight: 700;
    line-height: 46px;
    font-size: 120%;
}

input {
    border: none;
    font-family: inherit;
    font-size: inherit;
    font-weight: 400;
    color: inherit;
    border-radius: 0;
    background: #fff;
    margin: 0;
    padding: 0;
    height: $row-height;
    appearance: none;
    box-sizing: border-box;
}

input {
    padding: 0 10px;
}

input.ghost {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-top: solid 1px #fff;
    border-bottom: solid 1px #fff;

    &::-webkit-input-placeholder {
       color: rgba(255, 255, 255, 0.5);
    }
}

strong {
    font-weight: $font-weight-bold;
    color: $color-primary;
}

::-webkit-search-cancel-button {
    display: none;
}

*:focus {
    outline: none;
}

::placeholder {
   color: $placeholder-color;
   font-weight: $font-weight-thin;
}

[hidden] {
    display: none !important;
}

input[type=range] {
    appearance: none;
    width: 100%;
}

input[type=range]:focus {
    outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
    width: 100%;
    height: 5px;
    cursor: pointer;
    background: $color-grey;
    border-radius: 5px;
}

input[type=range]::-webkit-slider-thumb {
    height: 25px;
    width: 25px;
    margin-top: -10px;
    position: relative;
    border-radius: 100%;
    background: $color-primary;
    cursor: pointer;
    appearance: none;
    border: none;
}
