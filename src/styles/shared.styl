@import "config.styl";
@import "mixins.styl";
@import "nib";

.tap-highlight {
    tap-highlight();
}

:host, button, input {
    font-family: $font-family, $font-family-fallback;
    font-weight: $font-weight-regular;
    font-size: $font-size-default;
    color: $text-color;
    -webkit-font-smoothing: antialiased;
    -webkit-tap-highlight-color: transparent;
}

a {
    text-decoration: none;
    color: inherit;
}

button, a.button {
    display: inline-block;
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    border: none;
    background: #fff;
    margin: 0;
    height: $row-height;
    line-height: $row-height;
    padding: 0 15px;
    cursor: pointer;
    color: $color-primary;
    text-align: center;
    overflow: ellipsis;
    tap-highlight();
}

button.primary {
    background: $color-primary;
    color: $text-color-light;
}

button.ghost {
    background: transparent;
    color: $text-color-light;
    font-weight: 700;
    line-height: 46px;
}

input {
    border: none;
    font-family: inherit;
    font-size: inherit;
    font-weight: 400;
    color: inherit;
    border-radius: 0;
    background: $color-quinary;
    margin: 0;
    padding: 0 10px;
    height: $row-height;
    appearance: none;
    box-sizing: border-box;
}

input.ghost, :host(.ghost) > input {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-top: solid 1px #fff;
    border-bottom: solid 1px #fff;

    &::-webkit-input-placeholder {
       color: rgba(255, 255, 255, 0.5);
    }
}

textarea {
    font-weight: inherit;
    font-family: inherit;
    font-size: inherit;
    color: inherit;
    border: none;
    background: #fff;
    margin: 0;
    display: block;
    padding: 0;
    border-radius: 0;
    appearance: none;
    resize: none;
}

textarea[nowrap] {
    white-space: pre;
    word-wrap: normal;
    overflow-x: scroll;
}

input:not(:focus), textarea:not(:focus) {
    cursor: pointer;
}

strong {
    font-weight: $font-weight-bold;
}

::-webkit-search-cancel-button {
    display: none;
}

*:focus {
    outline: none;
}

::-webkit-input-placeholder {
   color: $placeholder-color;
}

[hidden] {
    display: none !important;
}

[disabled] {
    opacity: 0.5;
}

input[type=range] {
    appearance: none;
    width: 100%;
}

input[type=range]:focus {
    outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
    width: 100%;
    height: 4px;
    cursor: pointer;
    background: $color-quaternary;
    border-radius: 5px;
}

input[type=range]::-webkit-slider-thumb {
    height: 50px;
    width: 50px;
    margin-top: -23px;
    position: relative;
    border-radius: 100%;
    background: $color-primary;
    cursor: pointer;
    appearance: none;
    border: none;
    box-sizing: border-box;
    padding: 12px;
    background-clip: content-box;
}
