@import "../../styles/config";
@import "nib";

@keyframes reveal {
    from { transform: translate3d(0, 100%, 0); opacity: 0; }
    50% { transform: translate3d(0, -10%, 0); opacity: 1; }
    to { transform: translate3d(0, 0, 0); opacity: 1; }
}

:host {
    display: block;
    background-color: $color-primary;
    overflow: hidden;
    top: 0;
    color: #fff;
}

.wrapper {
    height: 350px;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto 0;
    text-align: center;

    input, padlock-password-input {
        text-align: center;
        width: 100%;
    }
}

.tap-highlight {
    margin-bottom: 10px;
}

.header {
    font-size: 50px;
    font-weight: 300;
    margin-bottom: 30px;
    font-weight: $font-weight-thin;
    animation: reveal 0.5s ease 0.2s both;
}

.pwdinput {
    animation: reveal 0.5s ease 0.4s both;
}

.enter-button {
    width: 100%;
    margin-top: 10px;
    animation reveal 0.5s ease 0.6s both;
    font-size: 115%;
}

padlock-lock {
    position: absolute;
    left: 0;
    right: 0;
    bottom: -50px;
    margin: 0 auto;
    animation: reveal 0.5s ease 0.8s both;
}

@media (max-height: 500px) {
    padlock-lock {
        height: 0;
    }

    .wrapper {
        height: 230px;
    }
}
