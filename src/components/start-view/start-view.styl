@import "../../styles/config";
@import "nib";

@keyframes reveal {
    from { transform: translate3d(0, 100%, 0); opacity: 0; }
    50% { transform: translate3d(0, -10%, 0); opacity: 1; }
    to { transform: translate3d(0, 0, 0); opacity: 1; }
}

:host {
    display: block;
    background-color: $color-primary;
    overflow: hidden;
    top: 0;
    color: $text-color-light;
    transition: background-color 1s, color 1s;
}

:host[mode="restore-cloud"] {
    background-color: $color-quaternary;
    color: $color-primary;

    .enter-button, input {
        color: inherit;
    }

    .switch-button {
        color: $text-color-light;
    }
}

.get-started, .restore-cloud {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto 0;
    text-align: center;
    transition: transform 0.7s, opacity 0.7s;

    input, padlock-password-input {
        text-align: center;
        width: 100%;
    }
}

.get-started {
    height: 350px;
    color: $text-color-light;

    input, padlock-password-input {
        background: rgba(255, 255, 255, 0.1);
    }
}

.restore-cloud {
    height: 400px;
    color: $color-primary;

    .header {
        font-size: 35px;
    }
}

:host[mode="restore-cloud"] .get-started, :host:not([mode="restore-cloud"]) .restore-cloud {
    transform: translate(0, 50px);
    opacity: 0;
    // z-index: -1;
    pointer-events: none;
    transition-duration: 0.2s;
}

.tap-highlight {
    margin-bottom: 10px;
}

.header {
    font-size: 50px;
    font-weight: 300;
    margin-bottom: 30px;
    font-weight: $font-weight-thin;
    animation: reveal 0.5s ease 0.2s both;
}

.pwdinput {
    animation: reveal 0.5s ease 0.4s both;
}

.enter-button {
    width: 100%;
    margin-top: 10px;
    animation reveal 0.5s ease 0.6s both;
    font-size: 115%;
}

.switch-button {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 1;
    background: transparent;
    transition: opacity 0.5s ease;

    &:not(.reveal) {
        opacity: 0;
    }
}

padlock-lock {
    position: absolute;
    left: 0;
    right: 0;
    bottom: -50px;
    margin: 0 auto;
    animation: reveal 0.5s ease 0.8s both;
}

@media (max-height: 500px) {
    padlock-lock {
        height: 0;
    }

    .wrapper {
        height: 230px;
    }
}
