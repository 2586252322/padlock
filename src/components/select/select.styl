@import "../../styles/config";
@import "nib";

:host {
    display: block;
    position: relative;
    color: $color-primary;
}

button {
    width: 100%;
    position: relative;
    z-index: 1;
    color: inherit;

    shape-shifter {
        $size = 25px;
        position: absolute;
        right: 10px;
        top: 0;
        bottom: 0;
        margin: auto 0;
        width: $size;
        height: $size;
    }
}

.options {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
}

.options ::content > * {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    width: 100%;
    transition: transform 0.3s, opacity 0.3s;
}
