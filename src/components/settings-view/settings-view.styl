@import "../../styles/config";
@import "nib";

:host {
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

button, .button {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 5px;

    shape-shifter {
        position: absolute;
        right: 5px;
        top: 0;
        bottom: 0;
        margin: auto;
        width: 25px;
        height: 25px;
    }
}

.info {
    padding: 15px;
    width: 200px;
    margin: 0 auto;
    font-size: 15px;
    text-align: center;
    cursor: pointer;

    strong {
        color: $color-primary;
    }
}
