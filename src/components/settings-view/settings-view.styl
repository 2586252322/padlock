@import "../../styles/config";
@import "nib";

:host {
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

button, .button {
    display: block;
    width: 100%;
    box-sizing: border-box;
    margin-bottom: 5px;

    div {
        width: 100%;
        overflow: ellipsis;

        .email {
            font-size: $font-size-tiny;
            line-height: inherit;
        }
    }
}

.section {
    margin: 30px 0;
}

.info {
    padding: 15px;
    width: 200px;
    margin: 0 auto;
    font-size: 15px;
    text-align: center;
    cursor: pointer;

    strong {
        color: $color-primary;
    }
}
