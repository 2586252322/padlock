@require "../../styles/config.styl";
@require "../../styles/mixins.styl";
@import "nib";

:host {
    line-height: 0;
    pointer-events: none;
}

:host > div {
    overflow: hidden;
    height: $row-height;
    color: $text-color-light;
    background: transparentify($color-primary, 0.9);
    position: relative;
    width: 100%;
    pointer-events: auto;

    display: flex;

    shape-shifter {
        display: block;
        $padding = 10px;
        padding: $padding;
        width: $row-height - $padding * 2;
        height: $row-height - $padding * 2;
        cursor: pointer;
        position: relative;
        z-index: 1;

        &::shadow line {
            stroke: $text-color-light;
        }
    }

    &.show-filter {
        .filter-input {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }

        .title {
            opacity: 0;
            transform: translate3d(50%, 0, 0);
        }
    }

    &.filtering.show-filter #leftIcon {
        width: 0;
        padding-left: 0;
    }

    &::after {
        content: "";
        display: block;
        position: absolute;
        z-index: 1;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: #000;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.5s;
    }

    &.scrim {
        pointer-events: none;

        &::after {
            opacity: $scrim-opacity;
        }
    }
}

.middle {
    position: relative;
    flex: 1;
}

.middle > * {
    $line-height = 22px;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    // height: 100%;
    line-height: $line-height;
    padding: (($row-height - $line-height) / 2) 0;

    box-sizing: border-box;
    transition: transform 0.5s cubic-bezier(.71, 0.5, 0, 1.2), opacity 0.5s ease;
}

.filter-input {
    background: transparent;
    color: $text-color-light;
    opacity: 0;

    transform: translate3d(-50%, 0, 0);

    &::-webkit-input-placeholder {
       color: $placeholder-color-light;
    }
}

.title {
    pointer-events: none;
    opacity: 1;
    transform: translate3d(0, 0, 0);
    overflow: ellipsis;
}